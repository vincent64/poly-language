        //Transpose components
        long[] values = new[this.values.size];
        for(int i = 0; i < rows; i++) {
            for(int j = 0; j < columns; j++)
                values[i * columns + j] = this.values[j * columns + i];
        }

        return new(values, rows);
    }

    ¦ Swaps the given rows.
