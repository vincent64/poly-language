        assert(isSquare()) : new Matrix.NonSquareMatrixException();

        //Check every non-diagonal component
        for(int i = 0; i < rows; i++) {
            for(int j = 0; j < columns; j++) {
                if(i != j && values[i * columns + j] != 0L)
                    return false;
            }
        }

        return true;
    }

