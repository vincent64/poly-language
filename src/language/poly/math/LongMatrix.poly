        long[] values = new[columns];
        System.arraycopy(this.values, row * columns, values, 0, columns);

        return new(values);
    }

    ¦ Returns the long vector corresponding to the column at the given column index.
    ¦ @param column the column index
    ¦ @returns the column vector
    ¦
