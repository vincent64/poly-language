        assert(isSquare()) : new Matrix.NonSquareMatrixException();

        //Check every component
        for(int i = 1; i < rows; i++) {
            for(int j = 0; j < i; j++) {
                if(values[i * columns + j] != values[j * columns + i])
                    return false;
            }
        }

        return true;
    }

    ¦ Returns the transpose of the current matrix.
